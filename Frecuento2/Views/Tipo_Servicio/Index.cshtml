@model IEnumerable<Frecuento2.Models.Tipo_Servicio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tipos de Servicio</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripción)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripción)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Tipo_Servicio }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Tipo_Servicio }, new { @class = "btn btn-info" })
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id_Tipo_Servicio }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
