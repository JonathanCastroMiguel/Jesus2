@model IEnumerable<Frecuento2.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>


@using (Html.BeginForm("Index", "Clientes", FormMethod.Get))
{
    <div class="col-sm-12 Main">
        <div class="col-sm-8">
            <div class="form-group">
                @Html.TextBox("Busqueda2", null, new { @class = "form-control", placeholder = "Nombre del cliente" })
            </div>
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Buscar" class="btn btn-success" />
            <input type="button" value="Borrar" class="btn btn-danger" onclick="@("window.location.href='" + @Url.Action("Index", "Clientes") + "'");" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.Dirección)
        </th>
        <th  class="text-center">
            @*@Html.DisplayNameFor(model => model.Código_Postal)*@
            Código Postal
        </th>
        <th  class="text-center">
            @*@Html.DisplayNameFor(model => model.Fecha_Nacimiento)*@
            Fecha Nacimiento
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.Teléfono)
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th  class="text-center">
            @*@Html.DisplayNameFor(model => model.DNI)*@
            DNI
        </th>
        <th  class="text-center">
            @*@Html.DisplayNameFor(model => model.Nº_Cuenta)*@
            Número Cuenta
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Dirección)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Código_Postal)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Teléfono)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.DNI)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Nº_Cuenta)
        </td>
        <td  class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cliente },new { @class = "btn btn-info" })
        </td>
     
    </tr>
    }

</table>
