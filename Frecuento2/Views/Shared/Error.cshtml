@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<<hr />
<h2 class="text-danger">Un error ha ocurrido mientras se procesaba su petición.</h2>
<br />
<p>Descripción: @Html.DisplayFor(model => model.Exception.Message)</p>
<p>Tipo excepción: @Html.DisplayFor(model => model.Exception.Source)</p>
<p>Excepción interna: @Html.DisplayFor(model => model.Exception.GetBaseException().Message)</p>
<p>Controlador: @Html.DisplayFor(model => model.ControllerName)</p>
<p>Acción: @Html.DisplayFor(model => model.ActionName)</p>


